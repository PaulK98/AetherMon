@* 
    Main layout template for AetherMon 
    Features: Cosmic theme, animated background, holographic UI elements
*@
<!DOCTYPE html>
<html lang="en" class="aether-theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AetherMon</title>

    @* Cosmic Styling *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Space+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Holographic Favicon *@
    <link rel="icon" type="image/png" href="~/images/favicon.ico">
</head>
<body class="stars-bg">
    @* Navigation with Holographic Effect *@
    <header class="aether-nav">
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand glow" asp-page="/Index">
                    <img src="~/images/logo.png" class="hologram-icon" alt="AetherMon Logo">
                    AETHERMON
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Aether Scanner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Favorites">Quantum Archive</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Animated Footer *@
    <footer class="aether-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - AetherMon |
            <a asp-page="/Privacy" class="text-cyber">Quantum Privacy Protocol</a> |
            <span class="text-muted">All rights reserved - MidnightDev</span>
        </div>
    </footer>

    @* Scripts *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>